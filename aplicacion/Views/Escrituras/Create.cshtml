@model aplicacion.ViewModels.EscrituraViewModel

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.Cne" class="control-label"></label>
                <input asp-for="@Model.Escritura.Cne" class="form-control" />
                <span asp-validation-for="@Model.Escritura.Cne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.Comuna" class="control-label"></label>
                <input asp-for="@Model.Escritura.Comuna" class="form-control" />
                <span asp-validation-for="@Model.Escritura.Comuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.Manzana" class="control-label"></label>
                <input asp-for="@Model.Escritura.Manzana" class="form-control" />
                <span asp-validation-for="@Model.Escritura.Manzana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.Predio" class="control-label"></label>
                <input asp-for="@Model.Escritura.Predio" class="form-control" />
                <span asp-validation-for="@Model.Escritura.Predio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.Fojas" class="control-label"></label>
                <input asp-for="@Model.Escritura.Fojas" class="form-control" />
                <span asp-validation-for="@Model.Escritura.Fojas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.FechaInscripcion" class="control-label"></label>
                <input asp-for="@Model.Escritura.FechaInscripcion" class="form-control" />
                <span asp-validation-for="@Model.Escritura.FechaInscripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Escritura.NumeroInscripcion" class="control-label"></label>
                <input asp-for="@Model.Escritura.NumeroInscripcion" class="form-control" />
                <span asp-validation-for="@Model.Escritura.NumeroInscripcion" class="text-danger"></span>
            </div>
            <hr />
            <h3>Adquirentes</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>NumAtencion</th>
                        <th>Run/Rut</th>
                        <th>Número de atención</th>
                        <th>Porcentaje derecho</th>
                        <th>Porcentaje derecho no acreditado</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Adquirentes.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.Adquirentes[i].NumAtencionNavigation" class="form-control" data-val="false" value="@ViewBag.NumAtencion" readonly />
                               
                            </td>
                            <td>
                                <input asp-for="@Model.Adquirentes[i].RunRut" class="form-control" />
                                <span asp-validation-for="@Model.Adquirentes[i].RunRut" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Adquirentes[i].NumAtencion" class="form-control" />
                                <span asp-validation-for="@Model.Adquirentes[i].NumAtencion" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Adquirentes[i].PorcentajeDerecho" class="form-control" />
                                <span asp-validation-for="@Model.Adquirentes[i].PorcentajeDerecho" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Adquirentes[i].PorcentajeDerechoNoAcreditado" class="form-control" />
                                <span asp-validation-for="@Model.Adquirentes[i].PorcentajeDerechoNoAcreditado" class="text-danger"></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <a href="#" id="add-adquirente">Agregar adquirente</a>
            </div>
            <h3>Enajenantes</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>NumAtencion</th>
                        <th>Run/Rut</th>
                        <th>Número de atención</th>
                        <th>Porcentaje derecho</th>
                        <th>Porcentaje derecho no acreditado</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Enajenantes.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.Enajenantes[i].NumAtencionNavigation" class="form-control" data-val="false" value="@ViewBag.NumAtencion" readonly />
                            </td>
                            <td>
                                <input asp-for="@Model.Enajenantes[i].RunRut" class="form-control" />
                                <span asp-validation-for="@Model.Enajenantes[i].RunRut" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Enajenantes[i].NumAtencion" class="form-control" />
                                <span asp-validation-for="@Model.Enajenantes[i].NumAtencion" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Enajenantes[i].PorcentajeDerecho" class="form-control" />
                                <span asp-validation-for="@Model.Enajenantes[i].PorcentajeDerecho" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Enajenantes[i].PorcentajeDerechoNoAcreditado" class="form-control" />
                                <span asp-validation-for="@Model.Enajenantes[i].PorcentajeDerechoNoAcreditado" class="text-danger"></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <a href="#" id="add-adquirente">Agregar Enajenantes</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
